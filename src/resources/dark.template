QToolTip
{
    border: 0.1ex solid #secondary_1_shade_0;
    background-color: #primary_shade_4;
    alternate-background-color: #secondary_1_shade_3;
    color: #secondary_1_shade_0;
    padding: 0.5ex;
    opacity: 200;
}

QWidget
{
    color: #FFFFFF;
    background-color: #primary_shade_4;
    selection-background-color:#primary_shade_3;
    selection-color: #FFFFFF;
    background-clip: border;
    border-image: none;
    border: 0px transparent black;
    outline: 0;
}

QWidget:item:hover
{
    background-color: #primary_shade_3;
    color: #FFFFFF;
}

QWidget:item:selected
{
    background-color: #primary_shade_3;
}


QCheckBox
{
    spacing: 0.5ex;
    outline: none;
    color: #secondary_1_shade_0;
    margin-bottom: 0.2ex;
    opacity: 200;
}

QCheckBox:disabled
{
    color: #secondary_1_shade_2;
}

QGroupBox::indicator
{
    margin-left: 0.2ex;
}

QCheckBox::indicator:unchecked,
QCheckBox::indicator:unchecked:focus
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_3, stop:0.3 #secondary_1_shade_4);
}

QCheckBox::indicator:unchecked:hover,
QCheckBox::indicator:unchecked:pressed,
QGroupBox::indicator:unchecked:hover,
QGroupBox::indicator:unchecked:focus,
QGroupBox::indicator:unchecked:pressed
{
    border: none;
    border-image: url(:/dark/checkbox_unchecked.svg);
}

QCheckBox::indicator:checked
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_0, stop:0.3 #secondary_1_shade_4);
}

QCheckBox::indicator:checked:hover,
QCheckBox::indicator:checked:focus,
QCheckBox::indicator:checked:pressed,
QGroupBox::indicator:checked:hover,
QGroupBox::indicator:checked:focus,
QGroupBox::indicator:checked:pressed
{
    border: none;
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_0, stop:0.3 #secondary_1_shade_4);
}

QCheckBox::indicator:indeterminate
{
    border-image: url(:/dark/checkbox_indeterminate.svg);
}

QCheckBox::indicator:indeterminate:focus,
QCheckBox::indicator:indeterminate:hover,
QCheckBox::indicator:indeterminate:pressed
{
    border-image: url(:/dark/checkbox_indeterminate.svg);
}

QCheckBox::indicator:indeterminate:disabled
{
    border-image: url(:/dark/checkbox_indeterminate_disabled.svg);
}

QCheckBox::indicator:checked:disabled,
QGroupBox::indicator:checked:disabled
{
    border-image: url(:/dark/checkbox_checked_disabled.svg);
}

QCheckBox::indicator:unchecked:disabled,
QGroupBox::indicator:unchecked:disabled
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_3, stop:0.3 #secondary_1_shade_4);
}

QRadioButton
{
    spacing: 0.5ex;
    outline: none;
    color: #FFFFFF;
    margin-bottom: 0.2ex;   
}

QRadioButton:disabled
{
    color: #secondary_1_shade_2;
}

QRadioButton::indicator:unchecked,
QRadioButton::indicator:unchecked:focus
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_2, stop:0.3 #secondary_1_shade_4);
}


QRadioButton::indicator:unchecked:hover,
QRadioButton::indicator:unchecked:pressed
{
    border: none;
    outline: none;
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_1, stop:0.3 #secondary_1_shade_4);
}


QRadioButton::indicator:checked
{
    border: none;
    outline: none;
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_0, stop:0.3 #secondary_1_shade_4);
}

QRadioButton::indicator:checked:hover,
QRadioButton::indicator:checked:focus,
QRadioButton::indicator:checked:pressed
{
    border: none;
    outline: none;
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_1, stop:0.3 #secondary_1_shade_4);
}

QRadioButton::indicator:checked:disabled
{
    outline: none;
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_2, stop:0.3 #secondary_1_shade_4);
}

QRadioButton::indicator:unchecked:disabled
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_3, stop:0.3 #secondary_1_shade_4);
}

QMenuBar
{
    background-color: #primary_shade_4;
    color: #FFFFFF;
}

QMenuBar::item
{
    background: transparent;
}

QMenuBar::item:selected
{
    background: transparent;
    border: 0.1ex solid #secondary_1_shade_2;
}

QMenuBar::item:pressed
{
    border: 0.1ex solid #secondary_1_shade_2;
    background-color: #primary_shade_1;
    color: #FFFFFF;
    margin-bottom: -0.1ex;
    padding-bottom: 0.1ex;
}

QMenu
{
    border: 0.1ex solid #secondary_1_shade_2;
    color: #FFFFFF;
    margin: 0.2ex;
}

QMenu::icon
{
    margin: 0.5ex;
}

QMenu::item
{
    color: #FFFFFF;
    padding: 0.5ex 3ex 0.5ex 3ex;
    margin-left: 0.5ex;
    border: 0.1ex solid transparent; /* reserve space for selection border */
}

QMenu::item:selected
{
    color: #AAAAAA;
}

QMenu::item:disabled
{
    color: #AAAAAA;
}

QMenu::separator
{
    height: 0.2ex;
    background: lightblue;
    margin-left: 1ex;
    margin-right: 0.5ex;
}

/* non-exclusive indicator = check box style indicator
   (see QActionGroup::setExclusive) */
QMenu::indicator:non-exclusive:unchecked
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_3, stop:0.3 #secondary_1_shade_4);
}

QMenu::indicator:non-exclusive:unchecked:selected
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_3, stop:0.3 #secondary_1_shade_4);
}

QMenu::indicator:non-exclusive:checked
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_1, stop:0.3 #secondary_1_shade_4);
}

QMenu::indicator:non-exclusive:checked:selected
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_1, stop:0.3 #secondary_1_shade_4);
}

/* exclusive indicator = radio button style indicator (see QActionGroup::setExclusive) */
QMenu::indicator:exclusive:unchecked
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_2, stop:0.3 #secondary_1_shade_4);
}

QMenu::indicator:exclusive:unchecked:selected
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_2, stop:0.3 #secondary_1_shade_4);
}

QMenu::indicator:exclusive:checked
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_1, stop:0.3 #secondary_1_shade_4);
}

QMenu::indicator:exclusive:checked:selected
{
    background: qradialgradient(cx:0, cy:0, radius: 1.3, fx:0.5, fy:0.7, stop:0.25 #primary_shade_1, stop:0.3 #secondary_1_shade_4);
}

QMenu::right-arrow
{
    margin: 0.5ex;
    border-image: url(:/light/right_arrow.svg);
    width: 0.6ex;
    height: 0.9ex;
}


QWidget:disabled
{
    color: #secondary_2_shade_4;
    background-color: #primary_shade_4;
}

QAbstractItemView
{
    alternate-background-color: #primary_shade_4;
    color: #secondary_1_shade_0;
    border: 0.1ex solid secondary_2_shade_3;
    border-radius: 0.2ex;
}

QWidget:focus,
QMenuBar:focus
{
    border: 0.1ex solid #primary_shade_1;
}

QTabWidget:focus,
QCheckBox:focus,
QRadioButton:focus,
QSlider:focus
{
    border: none;
}

QLineEdit
{
    background-color: #secondary_1_shade_3;
    padding: 0.5ex;
    border-style: solid;
    border: 0.1ex solid #secondary_1_shade_2;
    border-radius: 0.2ex;
    color: #FFFFFF;
}

QGroupBox
{
    border: 0.1ex solid #secondary_1_shade_2;
    border-radius: 0.2ex;
    padding-top: 1ex;
    margin-top: 1ex;
}

QGroupBox::title
{
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding-left: 0.1ex;
    padding-right: 0.1ex;
    margin-top: -0.7ex;
}

QAbstractScrollArea
{
    border-radius: 0.2ex;
    border: 0.1ex solid #secondary_1_shade_2;
    background-color: transparent;
}

QScrollBar:horizontal
{
    height: 1.5ex;
    margin: 0.3ex 1.5ex 0.3ex 1.5ex;
    border: 0.1ex transparent #secondary_2_shade_3;
    border-radius: 0.4ex;
    background-color: #secondary_2_shade_3;
}

QScrollBar::handle:horizontal
{
    background-color: #primary_shade_1;
    min-width: 0.5ex;
    border-radius: 0.4ex;
}

QScrollBar::add-line:horizontal
{
    margin: 0px 0.3ex 0px 0.3ex;
    border-image: url(:/dark/right_arrow_disabled.svg);
    width: 1ex;
    height: 1ex;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
    margin: 0ex 0.3ex 0ex 0.3ex;
    border-image: url(:/dark/left_arrow_disabled.svg);
    width: 1ex;
    height: 1ex;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal:hover,
QScrollBar::add-line:horizontal:on
{
    border-image: url(:/dark/right_arrow.svg);
    width: 1ex;
    height: 1ex;
    subcontrol-position: right;
    subcontrol-origin: margin;
}


QScrollBar::sub-line:horizontal:hover,
QScrollBar::sub-line:horizontal:on
{
    border-image: url(:/dark/left_arrow.svg);
    width: 1ex;
    height: 1ex;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal
{
    background: none;
}


QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
    background: none;
}

QScrollBar:vertical
{
    background-color: #secondary_2_shade_3;
    width: 1.5ex;
    margin: 1.5ex 0.3ex 1.5ex 0.3ex;
    border: 0.1ex transparent #secondary_2_shade_3;
    border-radius: 0.4ex;
}

QScrollBar::handle:vertical
{
    background-color: #primary_shade_1;
    min-height: 0.5ex;
    border-radius: 0.4ex;
}

QScrollBar::sub-line:vertical
{
    margin: 0.3ex 0ex 0.3ex 0ex;
    border-image: url(:/dark/up_arrow_disabled.svg);
    height: 1ex;
    width: 1ex;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::add-line:vertical
{
    margin: 0.3ex 0ex 0.3ex 0ex;
    border-image: url(:/dark/down_arrow_disabled.svg);
    height: 1ex;
    width: 1ex;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical:hover,
QScrollBar::sub-line:vertical:on
{

    border-image: url(:/dark/up_arrow.svg);
    height: 1ex;
    width: 1ex;
    subcontrol-position: top;
    subcontrol-origin: margin;
}


QScrollBar::add-line:vertical:hover,
QScrollBar::add-line:vertical:on
{
    border-image: url(:/dark/down_arrow.svg);
    height: 1ex;
    width: 1ex;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
    background: none;
}


QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
    background: none;
}

QTextEdit
{
    background-color: #secondary_1_shade_4;
    color: #FFFFFF;
    border: 0.1ex solid #secondary_1_shade_2;
}

QPlainTextEdit
{
    background-color: #secondary_1_shade_4;;
    color: #FFFFFF;
    border-radius: 0.2ex;
    border: 0.1ex solid #secondary_1_shade_2;
}

QHeaderView::section
{
    background-color: #secondary_1_shade_4;
    color: #FFFFFF;
    padding: 0.5ex;
    border: 0.1ex solid #secondary_1_shade_2;
}

QSizeGrip
{
    border-image: url(:/dark/sizegrip.svg);
    width: 1.2ex;
    height: 1.2ex;
}

QMainWindow::separator
{
    background-color: #primary_shade_4;
    color: white;
    padding-left: 0.4ex;
    spacing: 0.2ex;
    border: 0.1ex dashed #secondary_1_shade_2;
}

QMainWindow::separator:hover
{

    background-color: #secondary_2_shade_2;
    color: white;
    padding-left: 0.4ex;
    border: 0.1ex solid #secondary_1_shade_2;
    spacing: 0.2ex;
}

QMenu::separator
{
    height: 0.1ex;
    background-color: #secondary_1_shade_2;
    color: white;
    padding-left: 0.4ex;
    margin-left: 1ex;
    margin-right: 0.5ex;
}

QFrame[frameShape="2"],  /* QFrame::Panel == 0x0003 */
QFrame[frameShape="3"],  /* QFrame::WinPanel == 0x0003 */
QFrame[frameShape="4"],  /* QFrame::HLine == 0x0004 */
QFrame[frameShape="5"],  /* QFrame::VLine == 0x0005 */
QFrame[frameShape="6"]  /* QFrame::StyledPanel == 0x0006 */
{
    border-width: 0.1ex;
    padding: 0.1ex;
    border-style: solid;
    border-color: #primary_shade_4;
    background-color: #secondary_1_shade_2;
    border-radius: 0.5ex;
}

QStackedWidget
{
    border: 0.1ex transparent black;
}

QToolBar
{
    border: 0.1ex transparent #secondary_2_shade_3;
    background: 0.1ex solid #primary_shade_4;
    font-weight: bold;
}

QToolBar::handle:horizontal
{
    border-image: url(:/dark/hmovetoolbar.svg);
    width = 1.6ex;
    height = 6.4ex;
}

QToolBar::handle:vertical
{
    border-image: url(:/dark/vmovetoolbar.svg);
    width = 5.4ex;
    height = 1ex;
}

QToolBar::separator:horizontal
{
    border-image: url(:/dark/hsepartoolbar.svg);
    width = 0.7ex;
    height = 6.3ex;
}

QToolBar::separator:vertical
{
    border-image: url(:/dark/vsepartoolbars.svg);
    width = 6.3ex;
    height = 0.7ex;
}

QPushButton
{
    color: #FFFFFF;
    background-color: #secondary_2_shade_4;
    border-width: 1ex;
    border-color: #secondary_2_shade_3;
    border-style: solid;
    padding: 0.5ex;
    border-radius: 0.2ex;
    outline: none;
}

QPushButton:disabled
{
    background-color: #secondary_2_shade_4;
    border-width: 1ex;
    border-color: #secondary_2_shade_3;
    border-style: solid;
    padding-top: 0.5ex;
    padding-bottom: 0.5ex;
    padding-left: 1ex;
    padding-right: 1ex;
    color: #AAAAAA;
}

QPushButton:focus
{
    background-color: #secondary_2_shade_2;

}

QPushButton:pressed
{
    background-color: #primary_shade_4;
    padding-top: -1.5ex;
    padding-bottom: -1.7ex;
}

QComboBox
{
    selection-background-color: #primary_shade_4;
    border-style: solid;
    border: 0.1ex solid #secondary_1_shade_2;
    border-radius: 0.2ex;
    padding: 0.5ex;
    min-width: 7.5ex;
}

QPushButton:checked
{
    background-color: #primary_shade_2;
    border-color: #secondary_2_shade_2;
}

QPushButton:hover
{
    background-color: #primary_shade_2;
    border: 0.1ex solid #primary_shade_1;
    color: #FFFFFF;
}

QPushButton:checked:hover
{
    background-color: #primary_shade_3;
    border: 0.1ex solid #primary_shade_1;
    color: #FFFFFF;
}

QComboBox:hover,
QAbstractSpinBox:hover,
QLineEdit:hover,
QTextEdit:hover,
QPlainTextEdit:hover,
QAbstractView:hover,
QTreeView:hover
{
    border: 0.1ex solid #primary_shade_1;
    color: #FFFFFF;
}

QComboBox:hover:pressed,
QPushButton:hover:pressed,
QAbstractSpinBox:hover:pressed,
QLineEdit:hover:pressed,
QTextEdit:hover:pressed,
QPlainTextEdit:hover:pressed,
QAbstractView:hover:pressed,
QTreeView:hover:pressed
{
    background-color: #primary_shade_4;
}

QComboBox:on
{
    padding-top: 0.3ex;
    padding-left: 0.4ex;
    selection-background-color: #secondary_2_shade_2;
}

QComboBox QAbstractItemView
{
    background-color: #secondary_1_shade_3;
    border-radius: 0.2ex;
    border: 0.1ex solid #secondary_1_shade_2;
    selection-background-color: #primary_shade_1;
}

QComboBox::drop-down
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 1.5ex;

    border-left-width: 0ex;
    border-left-color: darkgray;
    border-left-style: solid;
    border-top-right-radius: 0.3ex;
    border-bottom-right-radius: 0.3ex;
}

QComboBox::down-arrow
{
    border-image: url(:/dark/down_arrow_disabled.svg);
    width: 0.9ex;
    height: 0.6ex;
}

QComboBox::down-arrow:on,
QComboBox::down-arrow:hover,
QComboBox::down-arrow:focus
{
    border-image: url(:/dark/down_arrow.svg);
    width: 0.9ex;
    height: 0.6ex;
}

QAbstractSpinBox
{
    padding: 0.5ex;
    border: 0.1ex solid #secondary_1_shade_2;
    background-color: #secondary_1_shade_3;
    color: #secondary_1_shade_0;
    border-radius: 0.2ex;
    min-width: 7.5ex;
}

QAbstractSpinBox:up-button
{
    background-color: transparent;
    subcontrol-origin: border;
    subcontrol-position: center right;
}

QAbstractSpinBox:down-button
{
    background-color: transparent;
    subcontrol-origin: border;
    subcontrol-position: center left;
}

QAbstractSpinBox::up-arrow,
QAbstractSpinBox::up-arrow:disabled,
QAbstractSpinBox::up-arrow:off
{
    border-image: url(:/dark/up_arrow_disabled.svg);
    width: 0.9ex;
    height: 0.6ex;
}

QAbstractSpinBox::up-arrow:hover
{
    border-image: url(:/dark/up_arrow.svg);
    width: 0.9ex;
    height: 0.6ex;
}

QAbstractSpinBox::down-arrow,
QAbstractSpinBox::down-arrow:disabled,
QAbstractSpinBox::down-arrow:off
{
    border-image: url(:/dark/down_arrow_disabled.svg);
    width: 0.9ex;
    height: 0.6ex;
}

QAbstractSpinBox::down-arrow:hover
{
    border-image: url(:/dark/down_arrow.svg);
    width: 0.9ex;
    height: 0.6ex;
}

QLabel
{
    border: 0ex solid black;
    color: #FFFFFF;
}

/* BORDERS */
QTabWidget::pane
{
    padding: 0.5ex;
    margin: 0.1ex;
}

QTabWidget::pane:top
{
    border: 0.1ex solid #secondary_1_shade_2;
    top: -0.1ex;
}

QTabWidget::pane:bottom
{
    border: 0.1ex solid #secondary_1_shade_2;
    bottom: -0.1ex;
}

QTabWidget::pane:left
{
    border: 0.1ex solid #secondary_1_shade_2;
    right: -0.1ex;
}

QTabWidget::pane:right
{
    border: 0.1ex solid #secondary_1_shade_2;
    left: -0.1ex;
}


QTabBar
{
    qproperty-drawBase: 0;
    left: 0.5ex; /* move to the right by 0.5ex */
    border-radius: 0.3ex;
}

QTabBar:focus
{
    border: 0ex transparent black;
}

QTabBar::close-button
{
    border-image: url(:/dark/close.svg);
    background: transparent;
}

QTabBar::close-button:hover
{
    border-image: url(:/dark/close-hover.svg);
    width: 1.2ex;
    height: 1.2ex;
    background: transparent;
}

QTabBar::close-button:pressed
{
    border-image: url(:/dark/close-pressed.svg);
    width: 1.2ex;
    height: 1.2ex;
    background: transparent;
}

/* TOP TABS */
QTabBar::tab:top
